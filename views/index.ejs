<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

        <!-- Other Stylesheets and scripts -->
        <link rel='stylesheet' href='/stylesheets/style.css'/>
        <link href="https://fonts.googleapis.com/css?family=Muli:600,700,800&display=swap" rel="stylesheet">
        <script type="application/javascript" href="/javascript/resource_manager.js"></script>
        <title>The Design Index</title>
    </head>

    <body>
        <!-- Header -->
        <nav class="navbar">
            <!-- Top Header -->
            <div class="container-fluid header">
                <a class="navbar-brand mb-0 h1" href="#"><img src="/images/logo.svg" width="240" height="30" class="d-inline-block align-top" alt=""></a>
                <a class="navbar-text feedback" href = "mailto:abc@example.com?subject = Feedback&body = The Design Index Feedback">Send feedback</a>
            </div>

            <!-- Bottom Header -->
            <div class="container-fluid header">
                <h6 class="navbar-text slogan">A directory of the best design resources and tools</h6>
                <span class="navbar-text last-updated">Last updated on July 2019</span>
            </div>
        </nav>

        <nav class="navbar filterbar">
            <!-- Top Header -->
            <div class="container-fluid header">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Category
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" id="category-item" href="#">All</a>
                        <a class="dropdown-item" id="category-item" href="#">Photography</a>
                        <a class="dropdown-item" id="category-item" href="#">Mockups</a>
                        <a class="dropdown-item" id="category-item" href="#">Icons</a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Resource Wrapper -->
        <div class="box">
            <div class="resource-wrapper">
                <div class="row">

                    <!-- Include json values from resources.ejs to resource-wrapper -->
                    <%
                    let category_colours = {
                        Photography: "#1cc7a5",
                        Design: "#11ee00",
                        Icons: "#aa00aa",
                        Mockups: "#bbaabb"
                    };

                    let resources = [
                        {
                            title: "Unsplash",
                            description: "The internet's source of freely usable images. Powered by creators everywhere.",
                            category: "Photography",
                            job_types: ["Designer, Web Designer"],
                            url: "https://unsplash.com/",
                            icon_link: "/images/resource_icons/1_Unsplash.svg"
                        },
                        {
                            title: "Pexels",
                            description: "Bladi Bladi boogidi boo",
                            category: "Design",
                            job_types: ["Designer, Web Designer"],
                            url: "https://www.pexels.com/",
                            icon_link: "/images/resource_icons/1_Pexels.svg"
                        },
                        {
                            title: "Pixel Buddha",
                            description: "Ding dong, here's my bing bong!",
                            category: "Icons",
                            job_types: ["Designer, Web Developer"],
                            url: "https://pixelbuddha.net/",
                            icon_link: "/images/resource_icons/2_Pixelbuddha.svg"
                        },
                        {
                            title: "Media Lot",
                            description: "The internet's source looting media.",
                            category: "Mockups",
                            job_types: ["Designer, Robber"],
                            url: "https://unsplash.com/",
                            icon_link: "/images/resource_icons/2_Medialoot.svg"
                        },
                        {
                            title: "FlatIcon",
                            description: "Get your free icons here boi!",
                            category: "Icons",
                            job_types: ["Designer, Web Designer"],
                            url: "https://unsplash.com/",
                            icon_link: "/images/resource_icons/4_Flaticon.svg"
                        },
                        {
                            title: "FontSpace",
                            description: "For those with daddy issues.",
                            category: "Illustrations",
                            job_types: ["Designer, Web Designer"],
                            url: "https://unsplash.com/",
                            icon_link: "/images/resource_icons/5_Fontspace.svg"
                        },
                    ];
                    %>


                <% for(let i = 0; i < resources.length; i++) { %>
                         <!-- Resource Card -->
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 resource-card">
                            <a href=<%= resources[i].url %> rel="noopener" target="_blank"><div class="resource-card-wrapper">

                                <div class="card-content">
                                    <div class="card-icon-container">
                                        <div class="card-icon" alt="<%= resources[i].title %> Logo">
                                            <img src="<%= resources[i].icon_link %>" alt="<%= resources[i].title %> Logo"/>
                                        </div>
                                    </div>
                                    <div class="card-text-container">
                                        <div class="card-text card-category" style="color: <%= category_colours[resources[i].category]%>"><%= resources[i].category %></div>
                                        <div class="card-text card-title"><%= resources[i].title %></div>
                                        <div class="card-text card-description"><%= resources[i].description %></div>
                                    </div>
                                </div>

                            </div>
                          </a>
                        </div>
                    <% } %>

                </div>
            </div>
        </div>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>
